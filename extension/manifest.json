{
  "manifest_version": 3,
  "name": "LeetCode Notion Integration",
  "version": "1.0.0",
  "description": "A simple integration that helps update LeetCode Notion database about the user's performance",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "background": {
      "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open LeetCode Side Panel"
  },
  "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": ["content.js"]
        }
    ]
}